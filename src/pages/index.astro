---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'

import { Image } from 'astro:assets'
import myImage from '../assets/myImage.png'
import {myExperiences} from "../constants/experiences"
import {myEducation	} from "../constants/education"
import { myProjects } from '../constants/projects'
import { myCertifications } from '../constants/certifications'
import { mySkills } from '../constants/Skills'

---

<PageLayout meta={{ title: 'Resume' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={myImage}
				alt='profile photo'
				class='h-28 w-auto rounded-full bg-[#CDD8DD] p-1'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Rohan Gope</h1>				
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='Celebel Technologies'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Durgapur'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/rohan-gope-a96072199/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>

					<Label
						title='Portfolio Website'
						as='a'
						href='https://rohangope-portfolio.vercel.app/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M12 2C6.48 2 2 6.48 2 12c0 5.52 4.48 10 10 10c5.52 0 10-4.48 10-10c0-5.52-4.48-10-10-10zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8s8 3.59 8 8s-3.59 8-8 8zm-1-5h2v-2h-2v2zm0-4h2V9h-2v2z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				I am Rohan Gope, a final-year Information Technology undergraduate at Jalpaiguri Government Engineering College (Autonomous) and an intern at Celebal Technologies. My passion lies in full-stack web development, where I am skilled in front-end technologies like ReactJS, and NextJS, as well as back-end technologies such as Node.js, Express.js, MongoDB, PostgreSQL, and MySQL. With a strong foundation in data structures and algorithms, I focus on crafting high-performing, user-centric web applications. As the Placement Coordinator at TnP cell JGEC, I am eager to contribute to innovative projects. Feel free to reach out to me at rg2512@it.jgec.ac.in for any inquiries or collaboration opportunities.
			</p>
		</Section>
		

		<Section title='Experience'>
			{
				myExperiences.map((experience) => (
					<Card
						heading={experience.title}
						subheading={experience.company}
						date={experience.date}
						altText='Lorem, ipsum dolor sit'
						imageClass='h-12 w-auto md:-left-16'
					>
						<ul class='ml-4 list-disc text-muted-foreground'>
							{
								experience.description.map((point) => (
									<li>{point}</li>
								))
							}
						</ul>
					</Card>
				))
			}
			
		</Section>

		<Section title='Education'>
			{
				myEducation.map((education) => (
					<Card
						heading={education.degree}
						subheading={education.institute}
						date={education.date}
						altText='Lorem, ipsum dolor sit'
						imageClass='h-12 w-auto md:-left-16'
					>					
					</Card>
				))
			}
			
		</Section>

		<Section title='Projects'>
			<div class='grid grid-cols-1 gap-y-7 md:grid-cols-2 md:gap-x-7'>
				{
					myProjects.map((project) => (
						<ProjectCard
							heading={project.title}
							description={project.description}
							techStack={project.techStack}
							href={project.githubLink}
							demoLink={project.demoLink}
							imagePath={project.imagePath}
							altText={project.altText}
						/>
					))
				}
			</div>
		</Section>

		<!-- <Section title='Certifications'>
			{
				myCertifications.map((certification) => (
					<Card
						heading={certification.title}
						subheading={certification.institute}
						date={certification.date}						
						altText='Lorem, ipsum dolor sit'
						imageClass='h-12 w-auto md:-left-16'
					>
					</Card>
				))
			}
			
		</Section> -->

		<Section title='Skills'>
			{
				mySkills.map((skill) => (
					<SkillLayout title={skill.title} skills={skill.skills} />
				))
			}			
		</Section>
	</div>
	
</PageLayout>
